<?xml version="1.0" encoding="UTF-8" ?>
<Shell
	x:Class="UrbanVogue.AppShell"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:views="clr-namespace:UrbanVogue.Views"
	xmlns:local="clr-namespace:UrbanVogue">

	<ShellContent
		Shell.NavBarIsVisible="true"
		Title="Main"
		Icon="iconblank.png"
		ContentTemplate="{DataTemplate views:MainPage}"
		Route="MainPage" />
	<ShellContent
		Shell.NavBarIsVisible="true"
		Title="Catalog"
		Icon="iconblank.png"
		ContentTemplate="{DataTemplate views:CatalogPage}"
		Route="CatalogPage" />
	<ShellContent
		Shell.NavBarIsVisible="true"
		Title="Order"
		Icon="iconlottie.png"
		ContentTemplate="{DataTemplate views:OrderPage}"
		Route="OrderPage" />
	<ShellContent
		Shell.NavBarIsVisible="true"
		Title="Profile"
		Icon="iconblank.png"
		ContentTemplate="{DataTemplate views:ProfilePage}"
		Route="ProfilePage" />
	<ShellContent
		Shell.NavBarIsVisible="true"
		Title="Cart"
		Icon="iconblank.png"
		ContentTemplate="{DataTemplate views:CartPage}"
		Route="CartPage" />
	<ShellContent
		Shell.NavBarIsVisible="true"
		Title="About"
		Icon="iconblank.png"
		ContentTemplate="{DataTemplate views:AboutPage}"
		Route="AboutPage" />
	<ShellContent
		Shell.NavBarIsVisible="true"
		Title="Auth"
		Icon="iconblank.png"
		ContentTemplate="{DataTemplate views:AuthPage}"
		Route="AuthPage" />
</Shell>
